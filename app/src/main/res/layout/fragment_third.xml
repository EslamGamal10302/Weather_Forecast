<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_purple">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/thirdscreen" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="343dp"
            android:layout_height="103dp"
            android:layout_marginTop="84dp"
            android:text="with the sun,rain etc.comes challenges.\n but with our special tips to keep your day \n going,you don't have to worry about any \n disruptions "
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:text="Finish"
            android:textColor="@color/medium_purple"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <RadioGroup
            android:id="@+id/IntialradioGroup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/settingselector2"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <RadioButton
                android:id="@+id/radio_gps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:drawableEnd="@drawable/gps"
                android:drawablePadding="5dp"
                android:layoutDirection="rtl"
                android:paddingLeft="15dp"
                android:buttonTint="@color/white"
                android:text="@string/radio_Gps"
                android:textColor="@color/white"
                android:textStyle="bold"></RadioButton>

            <RadioButton
                android:id="@+id/radio_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:buttonTint="@color/white"
                android:drawableEnd="@drawable/map"
                android:drawablePadding="5dp"
                android:layoutDirection="rtl"
                android:paddingLeft="15dp"
                android:text="@string/radio_Map"
                android:textColor="@color/white"
                android:textStyle="bold"></RadioButton>

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>